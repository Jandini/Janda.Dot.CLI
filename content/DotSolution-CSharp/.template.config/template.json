{
  "$schema": "http://json.schemastore.org/template",
  "author": "Matt Janda",
  "classifications": ["dots-cli"],
  "name": "dot repository",
  "generatorVersions": "[1.0.0.0-*)",
  "description": "dot repository",
  "groupIdentity": "dot.repository",
  "precedence": "4000",
  "identity": "dot.repository",
  "shortName": "dotrepo",
  "tags": {
    "language": "",
    "type": "library"
  },
  "sourceName": "Dot.Solution",
  "preferNameDirectory": true,
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            "**/.vs/**",
            ".git/**",
            ".cid/**",
            ".nuspec"
          ]
        },
        {
          "condition": "(noGit)",
          "exclude": [
            ".init.cmd",
            ".gitattributes",
            ".gitignore",
            "GitVersion.yml",
            "**/GitVersion.targets"
          ]
        }
      ]
    }
  ],
  "symbols": {
    "sourceName": {
      "type": "parameter",
      "defaultValue": "Dot.Solution",
      "replaces": "Dot.Solution"
    },
    "sourceNameLower": {
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source": "name",
        "toLower": true
      },
      "replaces": "dot.solution"
    },
    "noGit": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false"
    }
  }
}
